# ── Application ───────────────────────────────────────────────
APP_NAME="Resume Job Fit Analyzer"
APP_VERSION="1.0.0"
DEBUG=true
LOG_LEVEL=INFO

# ── ML Models ─────────────────────────────────────────────────
NER_MODEL_NAME=dslim/bert-base-NER
SBERT_MODEL_NAME=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
NER_DEVICE=cpu
BATCH_SIZE=32

# ── FAISS ─────────────────────────────────────────────────────
FAISS_M=32
FAISS_EF_CONSTRUCTION=200
FAISS_EF_SEARCH=64

# ── Neo4j (optional) ─────────────────────────────────────────
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# ── PostgreSQL (optional) ────────────────────────────────────
POSTGRES_DSN=postgresql+asyncpg://postgres:postgres@localhost:5432/resume_analyzer

# ── Redis (optional) ─────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# ── Scoring Weights ──────────────────────────────────────────
WEIGHT_SEMANTIC=0.50
WEIGHT_GRAPH=0.30
WEIGHT_EXPERIENCE=0.20

# ── Thresholds ───────────────────────────────────────────────
SKILL_SIMILARITY_THRESHOLD=0.75
NER_CONFIDENCE_THRESHOLD=0.60
